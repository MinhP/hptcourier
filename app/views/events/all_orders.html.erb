<div class=""><h3>All Orders for [<%= @event.date.to_date %>] <%= @event.name %> @ <%= @event.location %></h3></div>

<table class="table">
  <%= render "orders/item_header" %>
<% @event.items.each do |item| %>
  <%= render "items/agg_item", :item => item %>
<% item.orderitems.each do |orderitem| %>
  <%= render "orders/agg_item", :orderitem => orderitem %>
<% end %>
<% end %>
</table>

<% @orders.each do |order| %>
  <table class="table table-striped">
    <tr>
      <h3><%= get_user_name(order.user_id) %></h3>
      <ul>
        <li>Courier: <%= get_user_name order.courier_id %></li>
        <li><%= link_to "Assign Self as Handler", order_path(order.id, :courier_id => current_user.id), :method => :put, :class => "btn btn-sm btn-primary" %></li>
      </ul>
    </tr>
    <%= render "orders/item_header" %>
    <% order.orderitems.each do |orderitem| %>
      <%= render "orders/item", :orderitem => orderitem %>
    <% end %>
    <%= render "orders/order_total", :order_id => order.id, :order => order %>
  </table>
<% end %>