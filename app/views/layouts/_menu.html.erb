<%= nav_bar :brand => "HPT Courier Services" do %>
  <%= menu_group do %>
    <%= drop_down "Events" do %>
      <%= menu_item "List Events", events_path %>
      <%= menu_item "Add Events", new_event_path if user_signed_in? %>
    <% end %>
    <%= drop_down "Orders" do %>
      <%= menu_item("My Orders", order_list_user_path(current_user.id)) if user_signed_in? %>
      <%= menu_item "All Orders", orders_path %>
    <% end %>
    <%= menu_item "Users", users_path %>
  <% end %>
  <%= menu_group :pull => :right do %>
    <% if not user_signed_in? %>
      <%= menu_item "Sign In", new_user_session_path %>
      <%= menu_item "Register", new_user_registration_path %>
    <% else %>
      <%= menu_item current_user.name %>
      <%= menu_item "Sign Out", destroy_user_session_path, :method => :delete %>
    <% end %>
  <% end %>
<% end %>