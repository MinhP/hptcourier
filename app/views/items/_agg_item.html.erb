<div class="item">
  <div class="item-info row">
    <div class="item-name col-sm-6">
      <p><%= item.name %></p>
    </div>
    <div class="item-price col-sm-2">
      <p class="label-item">Price</p>
      <p class="item-data"><%= item.price %></p>
    </div>
    <div class="item-quantity col-sm-2">
      <p class="label-item">Qty</p>
      <p class="item-data"><%= quantity %></p>
    </div>
    <div class="item-total col-sm-2">
      <p class="label-item">Total</p>
      <p class="item-data"><%= quantity * item.price %></p>
    </div>
  </div>
  <div class="item-order row">
    <% item.orderitems.each do |orderitem| %>
      <%= render "orders/agg_item", :orderitem => orderitem %>
    <% end %>
  </div>
</div>