<div class="label-name title">
  Pending Approvals
</div>
<% @approve_users.each do |user| %>
<div class="row">
  <div class="col-sm-10 label-name">
    <%= get_user_name user.id %>
  </div>
  <div class="col-sm-2">
    <%= link_to "Approve", {:action => :approve_user, :id => user.id}, :method => :put, :class => "btn btn-primary" %>
  </div>
</div>
<% end %>