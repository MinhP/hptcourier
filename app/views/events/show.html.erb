<div class=""><h3>[<%= @event.date.to_date %>] <%= @event.name %> @ <%= @event.location %></h3></div>
<%= render "event_menu" %>
<%= form_for @order, :url => {:action => :create, :controller => :orders } do |f| %>
<%= hidden_field_tag :event_id, @event.id %>
<table class="table">
<tr>
  <th></th>
  <th>Item Name</th>
  <th>Item Description</th>
  <th>Price</th>
  <th>Quanitity</th>
  <th>Notes</th>
</tr>
<% @items.each do |item| %>
  <tr>
    <td>IMAGE HERE</td>
    <td><%= item.name %></td>
    <td><%= item.description %></td>
    <td><%= item.price %></td>
    <td><%= number_field_tag "order[#{item.id}][quantity]", 0, :min => 0 %></td>
    <td><%= text_field_tag "order[#{item.id}][notes]" %></td>
  </tr>
<% end %>
  <tr>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td><%= f.submit "Add to Order", :class => "btn btn-sm btn-primary pull-right" %></td>
  </tr>
</table>
<% end %>